	<build>
		<defaultGoal>install</defaultGoal>
		<plugins>

		</plugins>
	</build>
	<profiles>
		<profile>
			<id>psrpdev</id>
			<activation>
				<property>
					<name>psrpdev</name>
					<value>true</value>
				</property>
			</activation>
			<properties>
				<username>core_ws</username>
				<password>core_ws</password>
				<url>jdbc:oracle:thin:@10.10.207.165:1521:ORCL</url>
			</properties>
		</profile>
		<profile>
			<id>ddl</id>
			<activation>
				<property>
					<name>ddl</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>sql-maven-plugin</artifactId>
						<version>1.5</version>
						<configuration>
							<delimiter>/</delimiter>
							<delimiterType>row</delimiterType>
						</configuration>
						<executions>
							<execution>
								<phase>generate-test-sources</phase>
								<id>psrp-ddl</id>
								<goals>
									<goal>execute</goal>
								</goals>
								<configuration>
									<srcFiles>
										<srcFile>src/main/ddl/schema.sql</srcFile>
									</srcFiles>
									<!-- <enableBlockMode>true</enableBlockMode> -->
									<skip>${sqlplugin.skip}</skip>
									<keepFormat>true</keepFormat>
									<driver>oracle.jdbc.OracleDriver</driver>
								</configuration>
							</execution>
						</executions>
						<dependencies>
							<dependency>
								<groupId>com.oracle</groupId>
								<artifactId>ojdbc6</artifactId>
								<version>11.2.0.3.0</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>